<h1><%= @examination.name %></h1>
<div class="row">
  <div class="span6 offset1">
    <% i = 0 %>
    <%= form_for(@answer_sheet, url: examination_answer_sheet_path(@examination, @answer_sheet),
      method: :patch) do |f| %>
      <%= f.fields_for :answer_sheet_details do |builder| %>
        <% question = builder.object.question %>
        <div><%= i = i + 1 %>. <%= question.content %></div>
        <% question.answers.each do |answer| %>
          <div class="answer">
            <% answer.id == builder.object.answer_id ? checked = true : checked = false %>
            <%= builder.radio_button :answer_id, answer.id, checked: checked %>
            <%= answer.content %>
          </div>
        <% end %>
     <% end %>
     <%= f.submit "Submit", class: "btn btn-large btn-primary" %>
    <% end %>
  </div>
</div>