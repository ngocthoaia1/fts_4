<% provide(:title, 'Sign in') %>
<h1>Sign In</h1>

<div class="row">
  <div class="span6 offset3">
    <%= form_for(:session, url: sessions_path) do |f| %>

      <%= f.label :email %>
      <%= f.text_field :email %>

      <%= f.label :password %>
      <%= f.password_field :password %>

      <div><%= f.submit "Sign in", class: "btn btn-large btn-primary" %></div>      
      <p> Admin user? <%= link_to "Sign in with Admin!", admin_signin_path %> </p>
      <p>Not have account? <%= link_to "Create account", signup_path %></p>
    <% end %>
  </div>
</div>
